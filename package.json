{
  "name": "time-tracker-ts-dev",
  "description": "Simply tracks your time coding!",
  "version": "1.0.0",
  "activationEvents": [
    "onStartupFinished"
  ],
  "engines": {
    "vscode": "^1.63.0"
  },
  "main": "./out/main.js",
  "scripts": {
    "build": "npm run esbuild-base -- --minify && npm run vite-base",
    "web-dev": "vite ./src/web/",
    "esbuild-base": "esbuild ./src/extension/extension.js --bundle --outfile=./out/main.js --external:vscode --format=cjs --platform=node",
    "vite-base": "tsc && vite build ./src/web/"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.14",
    "@types/vscode": "^1.72.0",
    "esbuild": "^0.15.10",
    "vite": "^3.1.7"
  },
  "dependencies": {
    "@octokit/rest": "^19.0.4",
    "jquery": "^3.6.1"
  }
}